<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.ryan.pitchcounter.EditGamesActivity">

    <TextView
        android:text="Pitcher name, date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:textSize="20dp"
        android:id="@+id/pitcherNameDateTV"/>

    <TextView
        android:text="Num Pitches"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="30dp"
        android:gravity="center_horizontal"
        android:layout_below="@id/pitcherNameDateTV"
        android:id="@+id/numPitchesTV"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Strike"
        android:textSize="20dp"
        android:id="@+id/strikeButton"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:minWidth="100dp"
        android:minHeight="60dp"
        android:layout_alignParentStart="true"
        android:background="#ff04f920"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#ST"
        android:id="@+id/numStrikesTV"
        android:layout_below="@+id/strikeButton"
        android:layout_alignLeft="@+id/strikeButton"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:textSize="30dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ball"
        android:id="@+id/ballButton"
        android:textSize="20dp"
        android:layout_alignTop="@+id/strikeButton"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:minWidth="100dp"
        android:minHeight="60dp"
        android:layout_alignParentEnd="true"
        android:background="#fff91614"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#ST"
        android:id="@+id/numBallsTV"
        android:layout_below="@+id/ballButton"
        android:layout_alignLeft="@+id/ballButton"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:textSize="30dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Undo last pitch"
        android:layout_marginTop="20dp"
        android:id="@+id/undoPitchButton"
        android:layout_below="@+id/numStrikesTV"
        android:layout_alignLeft="@+id/strikeButton"
        android:layout_alignStart="@+id/strikeButton" android:textColor="#ffffffff"
        android:background="#ff000000"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="% Ratio"
        android:id="@+id/percRatioTV"
        android:layout_alignParentBottom="true"
        android:textSize="30dp"
        android:gravity="center_horizontal"/>

</RelativeLayout>
